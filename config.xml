<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.policiaapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Policia</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <allow-navigation href="*" />
    <access launch-external="yes" origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <platform name="android">
        <icon density="hdpi" src="assets/mipmap-hdpi/ic_launcher.png" />
        <icon density="ldpi" src="assets/mipmap-ldpi/ic_launcher.png" />
        <icon density="mdpi" src="assets/mipmap-mdpi/ic_launcher.png" />
        <icon density="xhdpi" src="assets/mipmap-xhdpi/ic_launcher.png" />
        <icon density="xxhdpi" src="assets/mipmap-xxhdpi/ic_launcher.png" />
        <icon density="xxxhdpi" src="assets/mipmap-xxxhdpi/ic_launcher.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^6.2.3" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
</widget>
